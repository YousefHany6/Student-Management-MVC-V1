@model IEnumerable<StudentAttendance>
<link href="~/css/table.css" rel="stylesheet" />
<style>
	th {
		background: #58595b !important;
		color: white !important;
		font-size: 20px !important;
		font-weight: 800 !important;
	}
</style>
@{
	if (Model.Count() != 0)
	{


		<div class="table_section">
			<table>
				<thead>
					<tr>
						<th scope="col" class="col-3">التاريخ</th>
						<th scope="col" class="col-3">الغياب</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						@foreach (var item in Model)
						{

						<tr>

							<td class="col-3" lang="ar" style="
						direction: ltr;
						font-size: 20px;
						font-weight: bold;
						color: black;
								">
									@item.Attendance.Date
							</td>
								@{
									if (item.IsPresent)
									{
									<td class="st1" style="
								font-family: system-ui;
								font-size: 20px;
								font-weight: 500;
								color: green;
										">
										حاضر
									</td>

									}
									else
									{
									<td class="st2" style="
								font-family: system-ui;
								font-size: 20px;
								font-weight: 500;
								color: red;
										">
										غايب
									</td>

									}
								}

						</tr>
						}

				</tbody>
			</table>
			<a style="
					float: left;
					margin: 14px;
					font-size: 25px;

		" asp-controller="stdDashboard" asp-action="std_home" class="btn btn-primary">رجوع</a>
		</div>

	}
	else
	{
		<h1>لا يوجد غيابات لهذه المادة</h1>
		<a style="
						float: left;
						margin: 14px;
					font-size: 25px;

				" asp-controller="stdDashboard" asp-action="std_home" class="btn btn-primary">رجوع</a>

	}
}